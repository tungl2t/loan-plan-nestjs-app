generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model LoanPlan {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  color     String
  name      String
  length    Float
  width     Float
  height    Float
  weight    Float
  qty       Int
  stackable Boolean
  tiltable  Boolean
  deleted   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
